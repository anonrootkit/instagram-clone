<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.UserProfileActivity"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="8dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="this how user name look like"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/username_userProfile"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher_round"
        android:id="@+id/userPic_userProfile"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/username_userProfile"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Posts"
        android:id="@+id/noOfPost_userProfile"
        android:layout_toEndOf="@id/userPic_userProfile"
        android:layout_below="@id/username_userProfile"
        android:layout_marginTop="44dp"
        android:layout_marginStart="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_count"
        tools:text="10"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/username_userProfile"
        android:layout_toEndOf="@id/userPic_userProfile"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Followers"
        android:id="@+id/followers_userProfile"
        android:layout_toEndOf="@id/noOfPost_userProfile"
        android:layout_below="@id/username_userProfile"
        android:layout_marginTop="44dp"
        android:layout_marginStart="40dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/followers_count"
        tools:text="100"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toEndOf="@id/noOfPost_userProfile"
        android:layout_below="@id/username_userProfile"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Following"
        android:id="@+id/following_userprofile"
        android:layout_toEndOf="@id/followers_userProfile"
        android:layout_below="@id/username_userProfile"
        android:layout_marginTop="44dp"
        android:layout_marginStart="40dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/following_count"
        tools:text="100"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toEndOf="@id/followers_userProfile"
        android:layout_below="@id/username_userProfile"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of user"
        android:id="@+id/name_userProfile"
        android:layout_below="@id/userPic_userProfile"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bio of user in profile"
        android:textSize="16sp"
        android:id="@+id/bio_userProfile"
        android:layout_below="@id/name_userProfile"
        />

